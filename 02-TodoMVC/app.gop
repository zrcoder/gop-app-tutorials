import (
	"net/http"

	"gop-app-tutorials/log"

	"github.com/zrcoder/app"
)

Restore()

app.route "/", &Page{}
app.runWhenOnBrowser

http.handle "/", &app.Handler{
	Name:         "Todos",
	Title:        "Go+ :: TodoMVC",
	Icon:         app.Icon{Default: "/web/static/logo.png"},
	LoadingLabel: "Todos",
	Author:       "zrcoder",
	Styles:       ["/web/static/style.css"],
}
log.println "serving on [http://localhost:9991]"
log.println http.listenAndServe(":9991", nil)
